@model MyMedicine.Models.LoginViewModel

@{
  ViewData["Title"] = "Home Page";
}

<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="login.css" />

</head>

<body class="body2">






<div class="justify-content-center mt-3">

  <div class='login  center' id='login'>
    <div class='head'>
      <h1 class='company'>My Medicine</h1>
    </div>
    <p class='msg'>Welcome back</p>
    <div class='form'>

      <form asp-area="Home" asp-action="LogIn" method="post" class="mx-1 mx-md-4">




        <label class="form-label" for="form3Example3c">Your Email</label>

        <input asp-for="Email" type="email" id="form3Example3c" class="form-control" />
        <label class="form-label" for="form3Example4c">Password</label>

        <input asp-for="Password" type="password" id="form3Example4c" class="form-control" />


        <div asp-validation-summary="All" class="text-danger"></div>



        <button type="submit" class="btn bg-white btn-lg">Log in</button>

      </form>
    </div>


    <div class="text-center">
      Don't have an account? <a asp-action="SignUp" class="text-white"><u>Create One!</u> </a>
    </div>
  </div>

</div>
</body>

</html>