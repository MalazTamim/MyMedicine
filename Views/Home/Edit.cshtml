<form asp-action="Edit" asp-route-id="@Model.Id" asp-area="Home"  method="post">


<div class="container">
  <div class="row">
    <div class="col-lg-4 col-md-4 col-sm-12">
     <img width="400" src="/images/edit.png" alt="update"> 
    </div>
    <div class="col-lg-7 col-md-7 col-sm-12   m-4">
      <div class="form-group">
          <label class="mb-2"><strong> Destination: </strong> </label>
                <span class="form-label text-white-50">Your Destination: </span>
                <input type="text" asp-for="Destination" class="form-control" id="formGroupExampleInput" 
                placeholder="Destination" tabindex="1">
            </div>

            <div class="form-group">
                <strong><label class="mb-2 mt-3"> Arrival Date:</label> </strong>
                <span class="form-label text-white-50">Choose Your Arrival Date: </span>
                <input type="date" data-val="true" value="2022-10-22" asp-for="ArrivalDate" class="form-control"  tabindex="2"  placeholder="Arrival Date">
            </div>
            
            
            <div class="form-group">
                <strong><label class="mb-2 mt-3"> Phone Number:</label> </strong>
                <span class="form-label text-white-50">Write Your Phone number: </span>
                <input asp-for="UserPhoneNumber" class="form-control" type="text" tabindex="2"  placeholder="Phone Number">
            </div>

            <div class="mt-3">
                <center>
                    <button type="submit" class="btn btn-info">Submit</button>
                    <a asp-action="Card" asp-controller="Home" class="btn btn-secondary">Cancel</a>
                </center>
            </div>

    </div>
    
  </div>
</div>
            
</form>