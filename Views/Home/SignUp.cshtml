@model MyMedicine.Models.RegistrationViewModel
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">


</head>

<body>






  <div class='login center' id='login'>
    <div class='head'>
      <h1 class='company'>Sign Up</h1>
    </div>
    <p class='msg'>Welcome!</p>
    <div class='form'>

      <form asp-area="Home" asp-action="SignUp" method="post" class="mx-1 mx-md-4">




        <label class="form-label" for="form3Example1c">Name</label>

        <input asp-for="Name" type="text" id="form3Example1c" class="form-control" />


        <label class="form-label" for="form3Example3c">Your Email</label>

        <input asp-for="Email" type="email" id="form3Example3c" class="form-control" />



        <label class="form-label" for="form3Example4c">Password</label>

        <input asp-for="Password" type="password" id="form3Example4c" class="form-control" />


        <label class="form-label" for="form3Example4cd">Repeat your password</label>

        <input asp-for="ConfirmPassword" type="password" id="form3Example4cd" class="form-control" />


        <div asp-validation-summary="All" class="text-danger"></div>


        <div class="text-center">
          <button type="submit" class="btn bg-white btn-lg">Register</button>
        </div>
      </form>


</body>

</html>